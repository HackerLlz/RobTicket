<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.duriamuk.robartifact.mapper.UserMapper">

    <resultMap id="loginPOMap" type="com.duriamuk.robartifact.entity.PO.user.UserInfoPO">
        <result column="username" property="username"/>
        <result column="send_mail" property="sendMail" />
    </resultMap>

    <sql id="baseColumn">
        id, username, send_mail
    </sql>

    <update id="updateUserInfoByUsername" parameterType="com.duriamuk.robartifact.entity.PO.user.UserInfoPO">
        UPDATE
        user_info
        SET
        <if test="sendMail != null and sendMail != ''">
            send_mail = #{sendMail}
        </if>
        WHERE
        username = #{username}
    </update>

    <select id="getUserInfoByUsername" parameterType="string" resultMap="loginPOMap">
        SELECT
        username, send_mail
        FROM
        user_info
        WHERE
        username = #{username}
    </select>

</mapper>